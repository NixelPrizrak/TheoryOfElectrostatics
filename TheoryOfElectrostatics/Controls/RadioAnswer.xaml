<UserControl x:Class="TheoryOfElectrostatics.RadioAnswer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheoryOfElectrostatics"
             mc:Ignorable="d" Margin="0,5">
    
    <RadioButton x:Name="MainRadioButton" FontSize="16" GroupName="OneAnswer" VerticalContentAlignment="Center">
        <RadioButton.Content>
            <WrapPanel Orientation="Vertical">
                <TextBlock x:Name="MainTextBlock" Text="Ответ" TextWrapping="Wrap" Margin="0,5"/>
                <Image Margin="0,5" MaxHeight="100" MaxWidth="200"/>
            </WrapPanel>
        </RadioButton.Content>
    </RadioButton>
</UserControl>
