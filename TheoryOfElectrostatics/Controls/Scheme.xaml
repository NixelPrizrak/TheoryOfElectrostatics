<UserControl x:Class="TheoryOfElectrostatics.Controls.Scheme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheoryOfElectrostatics.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel Background="AliceBlue">
        <Grid DockPanel.Dock="Top" Height="60">
            <Button Content="Добавить соединитель" HorizontalAlignment="Left" Margin="29,15,0,0" VerticalAlignment="Top" Height="35" Width="198" FontSize="16" Click="AddNodeButton_Click"/>
            <Button Content="Очистить" HorizontalAlignment="Left" Margin="253,15,0,0" VerticalAlignment="Top" Height="35" Width="198" FontSize="16" Click="RefreshButton_Click"/>
        </Grid>
        <Grid x:Name="SchemeGrid" Background="AliceBlue" MouseMove="Grid_MouseMove" MouseDown="SchemeGrid_PreviewMouseDown">
        </Grid>
    </DockPanel>
</UserControl>
