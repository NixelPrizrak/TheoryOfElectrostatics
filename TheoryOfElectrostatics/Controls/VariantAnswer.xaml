<UserControl x:Class="TheoryOfElectrostatics.Controls.VariantAnswer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheoryOfElectrostatics.Controls"
             mc:Ignorable="d" Margin="0,5">

    <DockPanel>
        <Grid DockPanel.Dock="Left" VerticalAlignment="Top" Margin="0,6,0,0">
            <Viewbox Width="20">
                <RadioButton x:Name="MainRadioButton" Visibility="Visible"/>
            </Viewbox>
            <Viewbox Width="20">
                <CheckBox x:Name="MainCheckBox" Visibility="Collapsed"/>
            </Viewbox>
        </Grid>
        <Grid Margin="5,0,0,0">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="MainTextBlock" Text="Ответ" TextWrapping="Wrap" Margin="0,5" FontSize="14"/>
                <Image x:Name="MainImage" Margin="0,5" Visibility="Collapsed" MaxHeight="140" MaxWidth="400" HorizontalAlignment="Left"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
