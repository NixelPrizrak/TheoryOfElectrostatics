<UserControl x:Class="TheoryOfElectrostatics.Controls.VariantAnswer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheoryOfElectrostatics.Controls"
             mc:Ignorable="d" Margin="0,5">

    <DockPanel>
        <Grid DockPanel.Dock="Left">
            <RadioButton x:Name="MainRadioButton" FontSize="16" VerticalAlignment="Center"/>
            <CheckBox x:Name="MainCheckBox" FontSize="16" VerticalAlignment="Center" Visibility="Collapsed"/>
        </Grid>
        <Grid Margin="5,0,0,0">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="MainTextBlock" Text="Ответ" TextWrapping="Wrap" Margin="0,5"/>
                <Image x:Name="MainImage" Margin="0,5" MaxHeight="100" MaxWidth="200"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
