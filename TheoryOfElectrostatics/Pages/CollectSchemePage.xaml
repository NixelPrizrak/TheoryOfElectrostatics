<Page x:Class="TheoryOfElectrostatics.Pages.CollectSchemePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheoryOfElectrostatics.Pages"
      xmlns:Controls="clr-namespace:TheoryOfElectrostatics.Controls" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CollectSchemePage">

    <DockPanel Background="AliceBlue">
        <Grid DockPanel.Dock="Top">
            <TextBlock x:Name="IfTextBlock" Margin="100,30"/>
        </Grid>
        <Grid DockPanel.Dock="Bottom" Height="60">
            <Button Content="Проверить" HorizontalAlignment="Left" Margin="63,10,0,0" VerticalAlignment="Top" Height="36" Width="103" FontSize="14" Click="CheckButton_Click"/>
            <Button Content="Сменить" HorizontalAlignment="Left" Margin="238,10,0,0" VerticalAlignment="Top" Height="36" Width="103" FontSize="14" Click="ChangeButton_Click"/>
        </Grid>
        <Controls:Scheme />
    </DockPanel>
</Page>
